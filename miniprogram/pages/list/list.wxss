/* pages/list/list.wxss */
image{
  width: 100%;
}
.rootBox{
  position:relative;
  width: 100%;
  height: 100%;
  
}
.rootList{
  width: 200rpx;
  background: #fafafa;
  /* height: 100%; */
  text-align: center;
  position: absolute;
  left: 0;
  top: 0;
  overflow: hidden;
  z-index: 9;
}
.item{
  font-size: 24rpx;
  line-height: 60rpx;
}
.item.cur{
  color: #e93b3d;
  background: #ffffff;
}
.rootContent{
  padding-left: 200rpx;
  width: 100%;
  background-color: #ffffff;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 8
}
.content-item-title{
  font-size: 32rpx;
  line-height: 60rpx;
  padding: 0 15rpx;
  font-weight: bold;
}
.content-item{
  
  text-align: center;
  box-sizing: border-box;
  padding: 10rpx 15rpx;
}
.content-item-image{
  width: 150rpx;
  height: 150rpx;
}
.content-text{
  font-size: 24rpx;
  line-height: 42rpx;
}
.flow-warp{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}